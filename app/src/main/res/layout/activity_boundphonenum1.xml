<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/boundphone_ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:onClick="onClick"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码"
            android:textColor="@color/black"
            android:textSize="@dimen/title_txt_size" />

        <EditText
            android:id="@+id/boundphone_et2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:drawablePadding="5dp"
            android:gravity="right"
            android:padding="5dp"
            android:hint="请输入您的手机号码"
            android:textColor="@color/txt_black2"
            android:textSize="@dimen/title_txt_size" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/txt_black3" />
    <LinearLayout
        android:id="@+id/boundphone_ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验  证  码"
            android:textColor="@color/black"
            android:textSize="@dimen/title_txt_size" />

        <EditText
            android:id="@+id/boundphone_et1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="right"
            android:hint="短信验证码"
            android:numeric="integer"
            android:padding="5dp"
            android:textColor="@color/txt_black2"
            android:textSize="@dimen/title_txt_size" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/txt_black2" />

        <TextView
            android:id="@+id/boundphone_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:text="获取验证码"
            android:textColor="@color/txt_white"
            android:textSize="@dimen/title_txt_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/boundphone_tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClick"
        android:padding="6dp"
        android:text="确        定"
        android:textColor="@color/txt_white"
        android:textSize="@dimen/btn_txt_size" />

</LinearLayout>
