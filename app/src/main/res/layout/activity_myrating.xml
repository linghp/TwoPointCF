<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical"
        android:padding="10dp">

        <com.peoit.twopointcf.ui.view.CustomShapeImageView
            android:id="@+id/mycenter_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:scaleType="fitXY"
            android:src="@mipmap/defaultloginheader"
            app:shape="circle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="马云"
            android:textColor="@color/white"
            android:textSize="@dimen/title_txt_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="我的积分：10000000"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已投资项目数"
            android:textColor="@color/black"
            android:textSize="@dimen/title_txt_size" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:drawablePadding="5dp"
            android:gravity="right"
            android:padding="5dp"
            android:text="0"
            android:textColor="@color/txt_black2"
            android:textSize="@dimen/title_txt_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已发起项目数"
            android:textColor="@color/black"
            android:textSize="@dimen/title_txt_size" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:drawablePadding="5dp"
            android:gravity="right"
            android:padding="5dp"
            android:text="0"
            android:textColor="@color/txt_black2"
            android:textSize="@dimen/title_txt_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="经理"
                android:textColor="@color/lightblue300"
                android:textSize="@dimen/title_txt_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="总经理"
                android:textColor="@color/lightblue300"
                android:textSize="@dimen/title_txt_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="总裁"
                android:textColor="@color/lightblue300"
                android:textSize="@dimen/title_txt_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="董事长"
                android:textColor="@color/lightblue300"
                android:textSize="@dimen/title_txt_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="主席"
                android:textColor="@color/lightblue300"
                android:textSize="@dimen/title_txt_size" />
        </LinearLayout>

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/lightblue300" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x &lt;= 10%"
                android:textColor="@color/lightblue300"
                android:textSize="@dimen/title_txt_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="10% &lt; x &lt; 20%"
                android:textColor="@color/lightblue300"
                android:textSize="@dimen/title_txt_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="20% &lt;= x &lt; 35%"
                android:textColor="@color/lightblue300"
                android:textSize="@dimen/title_txt_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="35% &lt;= x &lt; 60%"
                android:textColor="@color/lightblue300"
                android:textSize="@dimen/title_txt_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="x >= 60%"
                android:textColor="@color/lightblue300"
                android:textSize="@dimen/title_txt_size" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
