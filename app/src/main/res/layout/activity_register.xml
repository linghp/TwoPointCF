<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="昵称"
            android:textColor="@color/black"
            android:textSize="@dimen/large_title_txt_size" />

        <EditText
            android:id="@+id/register_et1"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:hint="请输入昵称"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/txt_black1"
            android:textColorHint="@color/txt_black2"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/txt_black2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="邮箱"
            android:textColor="@color/black"
            android:textSize="@dimen/large_title_txt_size" />

        <EditText
            android:id="@+id/register_et2"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:hint="请输入邮箱"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/txt_black1"
            android:textColorHint="@color/txt_black2"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/txt_black2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="电话"
            android:textColor="@color/black"
            android:textSize="@dimen/large_title_txt_size" />

        <EditText
            android:id="@+id/register_et3"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:hint="请输入电话"
            android:inputType="text"
            android:singleLine="true"
            android:numeric="integer"
            android:textColor="@color/txt_black1"
            android:textColorHint="@color/txt_black2"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/txt_black2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="登录密码"
            android:textColor="@color/black"
            android:textSize="@dimen/large_title_txt_size" />

        <EditText
            android:id="@+id/register_et4"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:hint="请输入登录密码"
            android:inputType="text"
            android:singleLine="true"
            android:password="true"
            android:textColor="@color/txt_black1"
            android:textColorHint="@color/txt_black2"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/txt_black2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="授权密码"
            android:textColor="@color/black"
            android:textSize="@dimen/large_title_txt_size" />

        <EditText
            android:id="@+id/register_et5"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:hint="请输入授权密码"
            android:inputType="text"
            android:singleLine="true"
            android:password="true"
            android:textColor="@color/txt_black1"
            android:textColorHint="@color/txt_black2"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/register_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClick"
        android:padding="6dp"
        android:text="注册"
        android:textColor="@color/txt_white"
        android:textSize="@dimen/btn_txt_size" />
    <TextView
        android:id="@+id/register_tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="同意众筹服务协议"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:clickable="true"
        android:onClick="onClick"
        android:textColor="@color/col_gy500togy300"
        android:layout_marginTop="20dp" />

</LinearLayout>
